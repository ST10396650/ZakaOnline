<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E6F2E6" /> <!-- Light green background on press -->
            <stroke android:width="2dp" android:color="@color/primaryColour2" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <stroke android:width="2dp" android:color="@color/primaryColour2" /> <!-- Dark green border -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>