<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFF8DC" /> <!-- Slightly darker on press -->
            <corners android:radius="16dp" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
            <stroke android:width="1dp" android:color="#AA8800" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFACD" /> <!-- Light Yellow (default) -->
            <corners android:radius="16dp" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
            <stroke android:width="1dp" android:color="#AA8800" />
            <!--<shadowLayer
                android:radius="10"
                android:dx="10"
                android:dy="10"
                android:color="@color/primaryColour2" />-->
        </shape>
    </item>
</selector>
