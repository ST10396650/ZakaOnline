<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background gradient oval -->
    <item android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/zakaYellow"
                android:endColor="@color/zakaDarkGreen"
                android:angle="270"/>

        </shape>
    </item>

    <!-- Foreground elephant image -->
    <item>
        <bitmap
            android:layout_width="match_parent"
            android:gravity="center"
            android:src="@drawable/elephant_icon"
            android:tileMode="disabled" />
    </item>

</layer-list>
