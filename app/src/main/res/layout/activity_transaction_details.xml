<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_green"
    android:padding="16dp">
    <!-- (Android Developers, 2025) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accentColour"
            android:elevation="4dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Transaction Summary"
                android:textColor="#D4AF37"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Summary Block -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/balance_card"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtTransDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grocery Run"
                android:textColor="@color/primaryColour2"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTransAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="- R250.00"
                android:textColor="#C62828"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#D4AF37" />

            <!-- Metadata Rows -->
            <TextView
                android:id="@+id/txtDateOfTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="📅  Date: 2024-04-27"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/txtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="💸  Type: Expense"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="📂  Category: Food > Takeout"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtRecurring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="🔁  Recurring: Monthly"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


        <!-- Attached Receipt -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="📎 Attached Receipt"
            android:textColor="@color/primaryColour2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgReceipt"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/balance_card"
            android:scaleType="centerCrop"
             />

    </LinearLayout>
</ScrollView>
